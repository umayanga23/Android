<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F37D8A"
    tools:context=".SelectFood">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="390dp"
        android:layout_height="209dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/top_backgroundd" />

    <TextView
        android:id="@+id/account"
        android:layout_width="205dp"
        android:layout_height="69dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Selct food"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.608" />

    <TextView
        android:id="@+id/name"
        android:layout_width="253dp"
        android:layout_height="62dp"
        android:fontFamily="@font/aclonica"
        android:text="FAST FOOD"
        android:textAlignment="center"
        android:textColor="#030F53"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037" />

    <LinearLayout
        android:layout_width="392dp"
        android:layout_height="190dp"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        android:padding="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintVertical_bias="0.039">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="293dp"
            android:layout_height="103dp"
            app:srcCompat="@drawable/kottu" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:text="KOTTU FUUL PACK"
            android:textAlignment="center"
            android:textColor="#3F51B5"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="392dp"
        android:layout_height="307dp"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        android:padding="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.964">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kottu roti is made with a type of flatbread called “Godhambara roti” or “Godamba roti” (which is also called roti canai, which originates from Malaysia, or the flakier cousin – paratha, from India), that is shredded and then mixed with vegetables, meat and eggs (or not, for a vegetarian or vegan option) and aromatic .."
            android:textColor="#3F51B5"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_width="345dp"
            android:layout_height="126dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="148dp"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="0.5"
                android:background="@drawable/social_btn_background"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/button10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ADD TO CART" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="183dp"
                android:layout_height="74dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_weight="0.5"
                android:background="@drawable/social_btn_background"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/button1111"
                    android:layout_width="146dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ODER NOW" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>